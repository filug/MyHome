{
    "manifest_version": 2,

    "name": "My Home",
    "description": "Gigaset elements extension for Chrome.",
    "homepage_url": "https://github.com/filug/MyHome/wiki",
    "version": "0.0.2",

    "browser_action": {
        "default_icon": {
            "16": "icons/home16.png",
            "48": "icons/home48.png",
            "128": "icons/home128.png"
        },
        "default_title": "My Home",
        "default_popup": "popup/myhome.html"
    },

    "icons": {
        "16": "icons/home16.png",
        "48": "icons/home48.png",
        "128": "icons/home128.png"
    },

    "background": {
        "page": "background/background.html",
        "persistent": true
    },
    
    "permissions": [
        "alarms",
        "tts"
    ]
}