{
    "manifest_version": 2,

    "name": "My Home",
    "description": "Access to Gigaset elements from Chrome browser.",
    "homepage_url": "https://github.com/filug/MyHome/wiki",
    "version": "0.0.2",

    "browser_action": {
        "default_icon": {
            "16": "icons/home/16/green.png",
            "32": "icons/home/32/green.png",
            "48": "icons/home/48/green.png"
        },
        "default_title": "My Home",
        "default_popup": "popup/myhome.html"
    },

    "icons": {
        "16": "icons/home/16/green.png",
        "48": "icons/home/48/green.png",
        "128": "icons/home/128/green.png"
    },

    "background": {
        "page": "background/background.html",
        "persistent": true
    },
    
    "permissions": [
        "alarms"
    ]
}